alias cd..='cd ..'
alias ..='cd ..'
alias ..2='cd ../..'
alias ..3='cd ../../..'
alias ..4='cd ../../../..'
alias ..5='cd ../../../../..'
alias ..6='cd ../../../../../..'

alias ex='explorer .'

alias vi='vim'
alias cdd='cd C:/Users/xin/Desktop'
alias cdu='cd C:/Users/xin'
alias prettyjson='python -m json.tool'
alias mkdir='mkdir -p'
alias cata='cat -A'

# avoid cygwin prompt wrapping of lines of the same line
export TERM='cygwin'

source ~/.git-completion.bash
source ~/.git-prompt.sh
export GIT_PS1_SHOWDIRTYSTATE=1
export PATH=$PATH:/home/xin/bin

dec2bin() {
    bc <<< "obase=2;$1";
}

bin2dec() {
    bc <<< "ibase=2;$1";
}

line() {
    if [[ "$1" = help ]]; then
        cat <<EOF
print 3rd line:
    line 3 <filename>

print 3rd to 10th line:
    line 3,10 <filename>
EOF
        return;
    fi
    sed -n "${1}p" < "${2}"
}
