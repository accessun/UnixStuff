dec2bin() {
    echo "obase=2;$1" | bc;
}

bin2dec() {
    echo "ibase=2;$1" | bc;
}

trl() {
    if [[ -z "$1" ]]; then
        tree -C . | less -r;
    else
        tree -C "$1" | less -r;
    fi
}